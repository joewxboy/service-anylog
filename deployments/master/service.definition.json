{
    "org": "$HZN_ORG_ID",
    "label": "$SERVICE_NAME master node for $ARCH",
    "description": "An example AnyLog service which deploys a master node",
    "documentation": "https://github.com/open-horizon-services/service-anylog/tree/os-dev/README.md",
    "url": "$SERVICE_NAME",
    "version": "$SERVICE_VERSION",
    "public": true,
    "arch": "$ARCH",
    "sharable": "singleton",
    "requiredServices": [],
    "userInput": [
        {
            "name": "INIT_TYPE",
            "defaultValue": "prod"
        },
        {
            "name": "ANYLOG_PATH",
            "defaultValue": "/app"
        },
        {
            "name": "LOCAL_SCRIPTS",
            "defaultValue": "/app/deployment-scripts/node-deployment"
        },
        {
            "name": "TEST_DIR",
            "defaultValue": "/app/deployment-scripts/test"
        },
        {
            "name": "LICENSE_KEY",
            "defaultValue": "$LICENSE_KEY"
        },
        {
            "name": "NODE_TYPE",
            "defaultValue": "$NODE_TYPE"
        },
        {
            "name": "NODE_NAME",
            "defaultValue": "$NODE_NAME"
        },
        {
            "name": "COMPANY_NAME",
            "defaultValue": "$COMPANY_NAME"
        },
        {
            "name": "ANYLOG_SERVER_PORT",
            "defaultValue": "$ANYLOG_SERVER_PORT"
        },
        {
            "name": "ANYLOG_REST_PORT",
            "defaultValue": "$ANYLOG_REST_PORT"
        },
        {
            "name": "TCP_BIND",
            "defaultValue": "false"
        },
        {
            "name": "REST_BIND",
            "defaultValue": "false"
        },
        {
            "name": "DB_TYPE",
            "defaultValue": "sqlite"
        },
        {
            "name": "DB_USER",
            "defaultValue": ""
        },
        {
            "name": "DB_PASSWD",
            "defaultValue": ""
        },
        {
            "name": "DB_IP",
            "defaultValue": "127.0.0.1"
        },
        {
            "name": "DB_PORT",
            "defaultValue": 5432
        },
        {
            "name": "LEDGER_CONN",
            "defaultValue": "127.0.0.1:32048"
        },
        {
            "name": "MONITOR_NODES",
            "defaultValue": "true"
        }
    ],
    "deployment": {
        "services": {
            "$SERVICE_NAME": {
                "image": "$DOCKER_IMAGE_BASE:$DOCKER_IMAGE_VERSION",
                "network": "host"
            }
        }
    }
}
